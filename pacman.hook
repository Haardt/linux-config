[Trigger]
Operation = Install
Operation = Upgrade
Operation = Remove
Type = Package
Target = *

[Action]
When = PostTransaction
Exec = /bin/sh -c '/usr/bin/rm -f /tmp/i3status/updates/lastExecute; /usr/bin/ln -sf -- -1 /tmp/i3status/orphaned-packages/lastExecute; /usr/bin/ln -sf -- -1 /tmp/i3status/kernel-update/lastExecute'
