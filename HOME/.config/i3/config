# Pulse Audio controls
bindsym XF86AudioRaiseVolume $exid pamixer -i 5; $exid pamixer -u #increase sound volume
bindsym XF86AudioLowerVolume $exid pamixer -d 5 #decrease sound volume
bindsym XF86AudioMute $exid pamixer -t # mute sound

# Sreen brightness controls
bindsym XF86MonBrightnessUp $exid sudo sh -c "echo 1500 > /sys/class/backlight/intel_backlight/brightness"
bindsym XF86MonBrightnessDown $exid sudo sh -c "echo 1 > /sys/class/backlight/intel_backlight/brightness"
