set $displayMode "Set display mode [w]ork [l]aptop"
bindsym $mod+x mode $displayMode
mode $displayMode {
    bindsym w exec $HOME/.config/screenlayouts/work.sh; mode "default"; restart
    bindsym l exec $HOME/.config/screenlayouts/laptop.sh; mode "default"; restart

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

set $Power "[S]leep, [p]oweroff, [l]ogoff or [r]eboot?"
bindsym $mod+q mode $Power

mode $Power {
    bindsym s exec /usr/local/bin/suspend; mode "default"
    bindsym p exec poweroff
    bindsym r exec reboot
    bindsym l exec i3-msg exit
    bindsym Escape mode "default"
}

# Emoji Keyboard

bindsym $mod+space exec --no-startup-id emoji-keyboard -k

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%; exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ false #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle # mute sound

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec /usr/local/bin/brightness up
bindsym XF86MonBrightnessDown exec /usr/local/bin/brightness down

# Media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindcode 164 exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

