# Screenshots
# Selection > Clipboard
bindsym Print --release exec "scrot -s /tmp/screenshot-$(date +%FT%T.%2N).png -e 'xclip -selection clipboard -t image/png < $f'"
# Full Screen > Clipboard
bindsym Shift+Print exec "scrot /tmp/screenshot-$(date +%FT%T.%2N).png -e 'xclip -selection clipboard -t image/png < $f'"
# Selection > File
bindsym Ctrl+Print --release exec "scrot -s $HOME/Screenshots/$(date +%FT%T.%2N).png"
# Full Screen > File
bindsym Ctrl+Shift+Print exec "scrot $HOME/Screenshots/$(date +%FT%T.%2N).png"

