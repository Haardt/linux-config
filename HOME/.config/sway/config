#bindsym Pause exec /usr/local/bin/custom/suspend
#bindsym Scroll_Lock exec /usr/local/bin/custom/lock

set $Power " [S]leep, [p]oweroff, [l]ogoff or [r]eboot?"
bindsym $mod+q mode $Power

mode $Power {
    bindsym s exec /usr/local/bin/custom/suspend; mode "default"
    bindsym p exec systemctl poweroff
    bindsym r exec systemctl reboot
    bindsym l exec swaymsg exit
    bindsym Escape mode "default"
}

# Emoji Keyboard

bindsym $mod+period $exid sh -c 'splatmoji -s light -m copy && wl-paste'
bindsym $mod+k $exid "sh -c 'if setxkbmap -query | grep us; then setxkbmap de; else setxkbmap us; fi'"
bindsym $mod+m $exid /usr/local/bin/custom/morse

# Pulse Audio controls
bindsym XF86AudioRaiseVolume $exid pamixer -i 5; $exid pamixer -u #increase sound volume
bindsym XF86AudioLowerVolume $exid pamixer -d 5 #decrease sound volume
bindsym XF86AudioMute $exid pamixer -t # mute sound

# Sreen brightness controls
bindsym XF86MonBrightnessUp $exid sudo sh -c "echo 1500 > /sys/class/backlight/intel_backlight/brightness"
bindsym XF86MonBrightnessDown $exid sudo sh -c "echo 1 > /sys/class/backlight/intel_backlight/brightness"
# bindsym XF86MonBrightnessUp $exid /usr/local/bin/custom/brightness up
# bindsym XF86MonBrightnessDown $exid /usr/local/bin/custom/brightness down

# Media player controls
bindsym XF86AudioPlay $exid playerctl -i chrome play-pause
bindsym XF86AudioPause $exid playerctl -i chrome pause
bindcode 164 $exid playerctl -i chrome play-pause
bindsym XF86AudioNext $exid playerctl -i chrome next
bindsym XF86AudioPrev $exid playerctl -i chrome previous

# Change Audio Settings
bindsym $mod+Shift+o $exid /usr/local/bin/custom/audio-program-sink
bindsym $mod+Ctrl+o $exid /usr/local/bin/custom/audio-profile
bindsym $mod+o $exid /usr/local/bin/custom/audio-sink

# Display Manager
bindsym $mod+Shift+p $exid /usr/local/bin/custom/rofi-randr
#bindsym $mod+p $exid /usr/bin/lxrandr
bindsym $mod+b $exid /usr/local/bin/custom/bluetooth_dmenu

# Lock
bindsym $mod+l $exid /usr/local/bin/custom/lock

# WiFi-Manager
bindsym $mod+i $exid networkmanager_dmenu

# Mount-Manager
bindsym $mod+u $exid udiskie-dmenu

bindsym $mod+x exec xkill

# Clipboard-Manager
bindsym $mod+Shift+v $exid sh -c 'clipman pick -t rofi --histpath="$HOME/.local/share/clipman.json" && wl-paste'
bindsym $mod+Ctrl+v $exid sh -c 'clipman pick -t rofi --histpath="$HOME/.local/share/clipman.json"'

# Screenshots
# Selection > Clipboard
bindsym Print $exid sh -c 'grim -g "$(slurp)" - | wl-copy'
# Full Screen > Clipboard
bindsym Shift+Print $exid sh -c 'grim - | wl-copy'
# Selection > File
bindsym Ctrl+Print $exid sh -c 'grim -g "$(slurp)" $HOME/Screenshots/$(date +%FT%T.%2N).png'
# Full Screen > File
bindsym Ctrl+Shift+Print $exid 'grim $HOME/Screenshots/$(date +%FT%T.%2N).png'

bindsym $mod+c exec "$BROWSER"
bindsym $mod+Shift+c exec "$BROWSER --incognito"
bindsym $mod+g exec sh -c 'dmenu -p google | tr " " "+" | xargs -r -I{} xdg-open https://google.com/search\?q\={}'

