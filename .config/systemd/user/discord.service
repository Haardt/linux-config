[Unit]
Description=Discord
PartOf=messengers.target

[Service]
Type=simple
ExecStart=/usr/bin/discord
RestartSec=0

# disallow writing to /usr, /bin, /sbin, ...
ProtectSystem=yes
# more paranoid security settings
NoNewPrivileges=yes
ProtectKernelTunables=yes
ProtectControlGroups=yes
Restart=always

[Install]
RequiredBy=messengers.target
