#!/usr/bin/env bash

set -ex

timeout 20 /bin/yay -Syy

UPDATES=$(yay -Qu --repo 2>/dev/null | wc -l)
AUR_UPDATES=$(yay -Qu --aur --devel 2> /dev/null | wc -l)

if (( (UPDATES + AUR_UPDATES) >= 1 )) && ! pgrep -x yay &> /dev/null &> /dev/null
then
  notify-send -t 10000 -u critical "$UPDATES | $AUR_UPDATES"
  swaymsg -s /run/user/*/sway-ipc.*.*.sock exec "gnome-terminal -- sh -c 'yay --pacman powerpill -Syu --devel --noconfirm --removemake --combinedupgrade --batchinstall'"
fi

